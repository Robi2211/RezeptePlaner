<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RezeptePlaner.Maui.Controls.NavigationHeader">
    
    <Border BackgroundColor="{StaticResource Surface}"
            StrokeThickness="0"
            Padding="20,12">
        <Grid ColumnDefinitions="Auto,*,Auto">
            
            <!-- Logo and Title -->
            <HorizontalStackLayout Grid.Column="0" 
                                   Spacing="12"
                                   VerticalOptions="Center">
                <Image Source="logo.svg"
                       WidthRequest="45"
                       HeightRequest="45"
                       Aspect="AspectFit"
                       VerticalOptions="Center" />
                <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                    <Label Text="CookMate"
                           TextColor="{StaticResource Foreground}"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="Recipe Planner"
                           TextColor="{StaticResource ForegroundMuted}"
                           FontSize="11" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Navigation Items -->
            <HorizontalStackLayout Grid.Column="1" 
                                   HorizontalOptions="Center"
                                   Spacing="30"
                                   VerticalOptions="Center">
                
                <VerticalStackLayout x:Name="DashboardStack" Spacing="4">
                    <Button x:Name="DashboardButton"
                            Text="Dashboard"
                            Clicked="OnDashboardClicked"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource ForegroundMuted}"
                            FontSize="14"
                            Padding="0"
                            BorderWidth="0" />
                    <BoxView x:Name="DashboardUnderline"
                             BackgroundColor="Transparent"
                             HeightRequest="2"
                             HorizontalOptions="Fill" />
                </VerticalStackLayout>
                
                <VerticalStackLayout x:Name="RecipesStack" Spacing="4">
                    <Button x:Name="RecipesButton"
                            Text="Rezepte"
                            Clicked="OnRecipesClicked"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource ForegroundMuted}"
                            FontSize="14"
                            Padding="0"
                            BorderWidth="0" />
                    <BoxView x:Name="RecipesUnderline"
                             BackgroundColor="Transparent"
                             HeightRequest="2"
                             HorizontalOptions="Fill" />
                </VerticalStackLayout>
                
                <VerticalStackLayout x:Name="WeekPlanStack" Spacing="4">
                    <Button x:Name="WeekPlanButton"
                            Text="Wochenplan"
                            Clicked="OnWeekPlanClicked"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource ForegroundMuted}"
                            FontSize="14"
                            Padding="0"
                            BorderWidth="0" />
                    <BoxView x:Name="WeekPlanUnderline"
                             BackgroundColor="Transparent"
                             HeightRequest="2"
                             HorizontalOptions="Fill" />
                </VerticalStackLayout>
                
                <VerticalStackLayout x:Name="FavoritesStack" Spacing="4">
                    <Button x:Name="FavoritesButton"
                            Text="Favoriten"
                            Clicked="OnFavoritesClicked"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource ForegroundMuted}"
                            FontSize="14"
                            Padding="0"
                            BorderWidth="0" />
                    <BoxView x:Name="FavoritesUnderline"
                             BackgroundColor="Transparent"
                             HeightRequest="2"
                             HorizontalOptions="Fill" />
                </VerticalStackLayout>
                
            </HorizontalStackLayout>

            <!-- New Recipe Button -->
            <Button Grid.Column="2"
                    Text="+ Neues Rezept"
                    Clicked="OnNewRecipeClicked"
                    BackgroundColor="{StaticResource Surface}"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="2"
                    CornerRadius="20"
                    FontSize="14"
                    Padding="20,10"
                    VerticalOptions="Center" />

        </Grid>
    </Border>
    
</ContentView>

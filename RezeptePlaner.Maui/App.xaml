<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RezeptePlaner.Maui"
             xmlns:converters="clr-namespace:RezeptePlaner.Maui.Converters"
             x:Class="RezeptePlaner.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:BoolToExpandIconConverter x:Key="BoolToExpandIconConverter" />
            <converters:BoolToFavoriteIconConverter x:Key="BoolToFavoriteIconConverter" />
            <converters:BoolToTodayBorderConverter x:Key="BoolToTodayBorderConverter" />
            <converters:BoolToTodayBackgroundConverter x:Key="BoolToTodayBackgroundConverter" />
            <converters:IsNullOrEmptyConverter x:Key="IsNullOrEmptyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

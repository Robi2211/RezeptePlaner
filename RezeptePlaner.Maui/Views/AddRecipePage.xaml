<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RezeptePlaner.Maui.ViewModels"
             xmlns:models="clr-namespace:RezeptePlaner.Maui.Models"
             xmlns:controls="clr-namespace:RezeptePlaner.Maui.Controls"
             x:Class="RezeptePlaner.Maui.Views.AddRecipePage"
             x:DataType="viewmodels:AddRecipeViewModel"
             Title="Neues Rezept"
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="Auto,*">
        <!-- Navigation Header -->
        <controls:NavigationHeader Grid.Row="0" CurrentPage="" />

        <ScrollView Grid.Row="1">
            <Grid Padding="20" RowDefinitions="Auto,*">
            
            <!-- Page Header -->
            <VerticalStackLayout Grid.Row="0" Margin="0,0,0,20">
                <Label Text="ðŸ“ Neues Rezept erstellen" 
                       Style="{StaticResource PageTitle}" />
                <Label Text="FÃ¼llen Sie alle Pflichtfelder aus (*)"
                       TextColor="{StaticResource ForegroundMuted}"
                       FontSize="14" />
            </VerticalStackLayout>

            <!-- Form Content -->
            <VerticalStackLayout Grid.Row="1" Spacing="20" IsVisible="{Binding ShowSuccessMessage, Converter={StaticResource InvertedBoolConverter}}">
                
                <!-- Basic Information Card -->
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Grundinformationen" 
                               Style="{StaticResource SectionTitle}" />
                        
                        <!-- Recipe Title (Entry) -->
                        <VerticalStackLayout>
                            <Label Text="Rezeptname *" 
                                   TextColor="{StaticResource Foreground}"
                                   FontSize="14"
                                   Margin="0,0,0,5" />
                            <Border BackgroundColor="{StaticResource Muted}"
                                    Stroke="{StaticResource Border}"
                                    StrokeShape="RoundRectangle 8"
                                    Padding="12,8">
                                <Entry Text="{Binding Title}"
                                       Placeholder="z.B. Spaghetti Carbonara"
                                       PlaceholderColor="{StaticResource ForegroundMuted}"
                                       TextColor="{StaticResource Foreground}"
                                       BackgroundColor="Transparent"
                                       FontSize="14" />
                            </Border>
                            <Label Text="{Binding TitleError}"
                                   Style="{StaticResource ErrorText}"
                                   IsVisible="{Binding TitleError, Converter={StaticResource StringToBoolConverter}}" />
                        </VerticalStackLayout>

                        <!-- Category Picker -->
                        <VerticalStackLayout>
                            <Label Text="Kategorie *" 
                                   TextColor="{StaticResource Foreground}"
                                   FontSize="14"
                                   Margin="0,0,0,5" />
                            <Border BackgroundColor="{StaticResource Muted}"
                                    Stroke="{StaticResource Border}"
                                    StrokeShape="RoundRectangle 8"
                                    Padding="12,8">
                                <Picker ItemsSource="{Binding Categories}"
                                        SelectedItem="{Binding SelectedCategory}"
                                        TextColor="{StaticResource Foreground}"
                                        TitleColor="{StaticResource ForegroundMuted}"
                                        BackgroundColor="Transparent"
                                        Title="Kategorie wÃ¤hlen" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Difficulty Picker -->
                        <VerticalStackLayout>
                            <Label Text="Schwierigkeitsgrad *" 
                                   TextColor="{StaticResource Foreground}"
                                   FontSize="14"
                                   Margin="0,0,0,5" />
                            <Border BackgroundColor="{StaticResource Muted}"
                                    Stroke="{StaticResource Border}"
                                    StrokeShape="RoundRectangle 8"
                                    Padding="12,8">
                                <Picker ItemsSource="{Binding DifficultyLevels}"
                                        SelectedItem="{Binding SelectedDifficulty}"
                                        TextColor="{StaticResource Foreground}"
                                        TitleColor="{StaticResource ForegroundMuted}"
                                        BackgroundColor="Transparent"
                                        Title="Schwierigkeit wÃ¤hlen" />
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Time and Servings Card -->
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Zeit und Portionen" 
                               Style="{StaticResource SectionTitle}" />
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="20" RowSpacing="15">
                            
                            <!-- Prep Time Slider -->
                            <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                                <Label Text="{Binding PrepTime, StringFormat='Vorbereitungszeit: {0} min'}" 
                                       TextColor="{StaticResource Foreground}"
                                       FontSize="14" />
                                <Slider Minimum="{Binding MinPrepTime}"
                                        Maximum="{Binding MaxPrepTime}"
                                        Value="{Binding PrepTime}"
                                        MinimumTrackColor="{StaticResource Primary}"
                                        MaximumTrackColor="{StaticResource Muted}"
                                        ThumbColor="{StaticResource Primary}" />
                            </VerticalStackLayout>

                            <!-- Cook Time Slider -->
                            <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                                <Label Text="{Binding CookTime, StringFormat='Kochzeit: {0} min'}" 
                                       TextColor="{StaticResource Foreground}"
                                       FontSize="14" />
                                <Slider Minimum="{Binding MinCookTime}"
                                        Maximum="{Binding MaxCookTime}"
                                        Value="{Binding CookTime}"
                                        MinimumTrackColor="{StaticResource Primary}"
                                        MaximumTrackColor="{StaticResource Muted}"
                                        ThumbColor="{StaticResource Primary}" />
                            </VerticalStackLayout>

                            <!-- Servings Stepper -->
                            <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                                <Label Text="Portionen" 
                                       TextColor="{StaticResource Foreground}"
                                       FontSize="14"
                                       Margin="0,0,0,5" />
                                <HorizontalStackLayout Spacing="10">
                                    <Stepper Minimum="{Binding MinServings}"
                                             Maximum="{Binding MaxServings}"
                                             Value="{Binding Servings}"
                                             Increment="1" />
                                    <Label Text="{Binding Servings}"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <!-- Planned Date -->
                            <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                                <Label Text="Geplant fÃ¼r" 
                                       TextColor="{StaticResource Foreground}"
                                       FontSize="14"
                                       Margin="0,0,0,5" />
                                <DatePicker Date="{Binding PlannedDate}"
                                            TextColor="{StaticResource Foreground}"
                                            BackgroundColor="{StaticResource Muted}"
                                            MinimumDate="{x:Static sys:DateTime.Today}"
                                            xmlns:sys="clr-namespace:System;assembly=netstandard" />
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Ingredients Card -->
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Zutaten *" 
                               Style="{StaticResource SectionTitle}" />
                        <Label Text="Eine Zutat pro Zeile eingeben"
                               TextColor="{StaticResource ForegroundMuted}"
                               FontSize="12" />
                        <Border BackgroundColor="{StaticResource Muted}"
                                Stroke="{StaticResource Border}"
                                StrokeShape="RoundRectangle 8"
                                Padding="12">
                            <Editor Text="{Binding IngredientsText}"
                                    Placeholder="z.B.&#x0a;400g Spaghetti&#x0a;200g Guanciale&#x0a;4 Eigelb"
                                    PlaceholderColor="{StaticResource ForegroundMuted}"
                                    TextColor="{StaticResource Foreground}"
                                    BackgroundColor="Transparent"
                                    HeightRequest="150"
                                    FontSize="14" />
                        </Border>
                        <Label Text="{Binding IngredientsError}"
                               Style="{StaticResource ErrorText}"
                               IsVisible="{Binding IngredientsError, Converter={StaticResource StringToBoolConverter}}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Instructions Card -->
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Zubereitung *" 
                               Style="{StaticResource SectionTitle}" />
                        <Label Text="Ein Schritt pro Zeile eingeben"
                               TextColor="{StaticResource ForegroundMuted}"
                               FontSize="12" />
                        <Border BackgroundColor="{StaticResource Muted}"
                                Stroke="{StaticResource Border}"
                                StrokeShape="RoundRectangle 8"
                                Padding="12">
                            <Editor Text="{Binding InstructionsText}"
                                    Placeholder="z.B.&#x0a;Wasser zum Kochen bringen&#x0a;Spaghetti al dente kochen&#x0a;Guanciale anbraten"
                                    PlaceholderColor="{StaticResource ForegroundMuted}"
                                    TextColor="{StaticResource Foreground}"
                                    BackgroundColor="Transparent"
                                    HeightRequest="150"
                                    FontSize="14" />
                        </Border>
                        <Label Text="{Binding InstructionsError}"
                               Style="{StaticResource ErrorText}"
                               IsVisible="{Binding InstructionsError, Converter={StaticResource StringToBoolConverter}}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Dietary Options Card -->
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="DiÃ¤toptionen" 
                               Style="{StaticResource SectionTitle}" />
                        
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                            <!-- Vegetarian Switch -->
                            <HorizontalStackLayout Grid.Column="0" Spacing="10">
                                <Switch IsToggled="{Binding IsVegetarian}"
                                        OnColor="{StaticResource Primary}"
                                        ThumbColor="{StaticResource Foreground}" />
                                <Label Text="ðŸ¥— Vegetarisch"
                                       TextColor="{StaticResource Foreground}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!-- Vegan Switch -->
                            <HorizontalStackLayout Grid.Column="1" Spacing="10">
                                <Switch IsToggled="{Binding IsVegan}"
                                        OnColor="{StaticResource Primary}"
                                        ThumbColor="{StaticResource Foreground}" />
                                <Label Text="ðŸŒ± Vegan"
                                       TextColor="{StaticResource Foreground}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!-- Gluten Free Switch -->
                            <HorizontalStackLayout Grid.Column="2" Spacing="10">
                                <Switch IsToggled="{Binding IsGlutenFree}"
                                        OnColor="{StaticResource Primary}"
                                        ThumbColor="{StaticResource Foreground}" />
                                <Label Text="ðŸŒ¾ Glutenfrei"
                                       TextColor="{StaticResource Foreground}"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Tags Card -->
                <Frame Style="{StaticResource CardFrame}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Tags (optional)" 
                               Style="{StaticResource SectionTitle}" />
                        <Label Text="Kommagetrennte Tags eingeben"
                               TextColor="{StaticResource ForegroundMuted}"
                               FontSize="12" />
                        <Border BackgroundColor="{StaticResource Muted}"
                                Stroke="{StaticResource Border}"
                                StrokeShape="RoundRectangle 8"
                                Padding="12,8">
                            <Entry Text="{Binding TagsText}"
                                   Placeholder="z.B. italienisch, pasta, klassiker"
                                   PlaceholderColor="{StaticResource ForegroundMuted}"
                                   TextColor="{StaticResource Foreground}"
                                   BackgroundColor="Transparent"
                                   FontSize="14" />
                        </Border>
                    </VerticalStackLayout>
                </Frame>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,40">
                    <Button Grid.Column="0"
                            Text="ZurÃ¼cksetzen"
                            Command="{Binding ResetFormCommand}"
                            Style="{StaticResource SecondaryButton}" />
                    <Button Grid.Column="1"
                            Text="Rezept speichern"
                            Command="{Binding SaveRecipeCommand}"
                            Style="{StaticResource PrimaryButton}" />
                </Grid>
            </VerticalStackLayout>

            <!-- Success Message -->
            <Frame Grid.Row="1"
                   Style="{StaticResource CardFrame}"
                   IsVisible="{Binding ShowSuccessMessage}"
                   VerticalOptions="Center">
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Label Text="âœ…"
                           FontSize="80"
                           HorizontalOptions="Center" />
                    <Label Text="Rezept erfolgreich gespeichert!"
                           TextColor="{StaticResource Success}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding LastAddedRecipe.Title, StringFormat='&quot;{0}&quot; wurde zur Sammlung hinzugefÃ¼gt.'}"
                           TextColor="{StaticResource ForegroundMuted}"
                           FontSize="16"
                           HorizontalOptions="Center" />
                    
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,20,0,0">
                        <Button Text="Zusammenfassung anzeigen"
                                Command="{Binding ViewSummaryCommand}"
                                Style="{StaticResource PrimaryButton}" />
                        <Button Text="Weiteres Rezept hinzufÃ¼gen"
                                Command="{Binding AddAnotherCommand}"
                                Style="{StaticResource SecondaryButton}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
    </Grid>
</ContentPage>

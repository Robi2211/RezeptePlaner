<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RezeptePlaner.Maui.ViewModels"
             xmlns:models="clr-namespace:RezeptePlaner.Maui.Models"
             xmlns:controls="clr-namespace:RezeptePlaner.Maui.Controls"
             x:Class="RezeptePlaner.Maui.Views.RecipesPage"
             x:DataType="viewmodels:RecipeListViewModel"
             Title="Rezepte"
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="Auto,*">
        <!-- Navigation Header -->
        <controls:NavigationHeader Grid.Row="0" CurrentPage="Rezepte" />

        <ScrollView Grid.Row="1">
            <Grid Padding="20" RowDefinitions="Auto,Auto,*">
        
        <!-- Page Header -->
        <VerticalStackLayout Grid.Row="0" Margin="0,0,0,20">
            <Label Text="Rezeptbibliothek" 
                   Style="{StaticResource PageTitle}" />
            <Label Text="Entdecke und verwalte all deine Lieblingsrezepte."
                   TextColor="{StaticResource ForegroundMuted}"
                   FontSize="14" />
        </VerticalStackLayout>

        <!-- Search and Filter Section -->
        <controls:RecipeFilterBar Grid.Row="1"
                                  Margin="0,0,0,20"
                                  SearchText="{Binding SearchText, Mode=TwoWay}"
                                  SelectedCategory="{Binding SelectedCategoryName, Mode=TwoWay}"
                                  SelectedDifficulty="{Binding SelectedDifficultyName, Mode=TwoWay}"
                                  MaxTimeMinutes="{Binding MaxTimeMinutes, Mode=TwoWay}"
                                  Categories="{Binding CategoryNames}"
                                  Difficulties="{Binding DifficultyNames}"
                                  ResultCount="{Binding ResultCount}" />

        <!-- Recipe List (CollectionView) -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding FilteredRecipes}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedRecipe}">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Padding="40">
                    <Label Text="ðŸ“‹"
                           FontSize="60"
                           HorizontalOptions="Center" />
                    <Label Text="Keine Rezepte gefunden"
                           TextColor="{StaticResource ForegroundMuted}"
                           FontSize="18"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0" />
                    <Label Text="Erstellen Sie Ihr erstes Rezept!"
                           TextColor="{StaticResource ForegroundMuted}"
                           FontSize="14"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 HorizontalItemSpacing="15"
                                 VerticalItemSpacing="15" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Recipe">
                    <Frame Style="{StaticResource CardFrame}"
                           Padding="0">
                        <Grid RowDefinitions="150,*">
                            
                            <!-- Recipe Image -->
                            <Image Grid.Row="0"
                                   Source="{Binding ImageUrl}"
                                   Aspect="AspectFill"
                                   HeightRequest="150"
                                   VerticalOptions="Fill"
                                   HorizontalOptions="Fill">
                                <Image.Clip>
                                    <RoundRectangleGeometry CornerRadius="12,12,0,0" 
                                                           Rect="0,0,400,150" />
                                </Image.Clip>
                            </Image>
                            
                            <!-- Favorite Badge -->
                            <Frame Grid.Row="0"
                                   BackgroundColor="{StaticResource Primary}"
                                   CornerRadius="15"
                                   Padding="8,4"
                                   Margin="10"
                                   HorizontalOptions="End"
                                   VerticalOptions="Start"
                                   IsVisible="{Binding IsFavorite}">
                                <Label Text="â­" FontSize="12" />
                            </Frame>
                            
                            <!-- Recipe Info -->
                            <VerticalStackLayout Grid.Row="1" Padding="15">
                                
                                <!-- Title -->
                                <Label Text="{Binding Title}"
                                       TextColor="{StaticResource Foreground}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2" />
                                
                                <!-- Category Badge -->
                                <Frame BackgroundColor="{StaticResource Primary}"
                                       CornerRadius="10"
                                       Padding="8,4"
                                       HorizontalOptions="Start"
                                       Margin="0,8,0,0">
                                    <Label Text="{Binding CategoryDisplay}"
                                           TextColor="{StaticResource Background}"
                                           FontSize="11" />
                                </Frame>
                                
                                <!-- Meta Info -->
                                <HorizontalStackLayout Margin="0,10,0,0" Spacing="15">
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="â±ï¸" FontSize="12" />
                                        <Label Text="{Binding TotalTime, StringFormat='{0} min'}"
                                               TextColor="{StaticResource ForegroundMuted}"
                                               FontSize="12" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="ðŸ‘¥" FontSize="12" />
                                        <Label Text="{Binding Servings, StringFormat='{0} Port.'}"
                                               TextColor="{StaticResource ForegroundMuted}"
                                               FontSize="12" />
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>
                                
                                <!-- Difficulty -->
                                <Label Text="{Binding DifficultyDisplay, StringFormat='Schwierigkeit: {0}'}"
                                       TextColor="{StaticResource ForegroundMuted}"
                                       FontSize="12"
                                       Margin="0,8,0,0" />
                                
                                <!-- Tags -->
                                <HorizontalStackLayout Margin="0,8,0,0" Spacing="5">
                                    <CollectionView ItemsSource="{Binding Tags}"
                                                    HeightRequest="25">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Frame BackgroundColor="{StaticResource Muted}"
                                                       BorderColor="{StaticResource Border}"
                                                       CornerRadius="8"
                                                       Padding="6,2">
                                                    <Label Text="{Binding}"
                                                           TextColor="{StaticResource ForegroundMuted}"
                                                           FontSize="10" />
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>

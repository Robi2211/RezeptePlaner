<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="CookMate.Maui.Resources.Styles.Colors">
    
    <!--
    Color palette for CookMate app.
    Based on the original Tailwind CSS colors from the React implementation.
    Colors are organized by hue with semantic naming.
    -->

    <!-- Primary Colors - Orange/Amber (Brand colors) -->
    <Color x:Key="Orange50">#FFF7ED</Color>
    <Color x:Key="Orange100">#FFEDD5</Color>
    <Color x:Key="Orange200">#FED7AA</Color>
    <Color x:Key="Orange300">#FDBA74</Color>
    <Color x:Key="Orange400">#FB923C</Color>
    <Color x:Key="Orange500">#F97316</Color>
    <Color x:Key="Orange600">#EA580C</Color>
    <Color x:Key="Orange700">#C2410C</Color>
    <Color x:Key="Orange800">#9A3412</Color>
    <Color x:Key="Orange900">#7C2D12</Color>

    <!-- Amber Colors (Alternative accent) -->
    <Color x:Key="Amber50">#FFFBEB</Color>
    <Color x:Key="Amber100">#FEF3C7</Color>
    <Color x:Key="Amber200">#FDE68A</Color>
    <Color x:Key="Amber300">#FCD34D</Color>
    <Color x:Key="Amber400">#FBBF24</Color>
    <Color x:Key="Amber500">#F59E0B</Color>
    <Color x:Key="Amber600">#D97706</Color>
    <Color x:Key="Amber700">#B45309</Color>

    <!-- Gray Colors (Neutral) -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- Green Colors (Success, Trending) -->
    <Color x:Key="Green50">#F0FDF4</Color>
    <Color x:Key="Green100">#DCFCE7</Color>
    <Color x:Key="Green200">#BBF7D0</Color>
    <Color x:Key="Green500">#22C55E</Color>
    <Color x:Key="Green600">#16A34A</Color>
    <Color x:Key="Green700">#15803D</Color>

    <!-- Teal Colors (Accent) -->
    <Color x:Key="Teal50">#F0FDFA</Color>
    <Color x:Key="Teal100">#CCFBF1</Color>
    <Color x:Key="Teal200">#99F6E4</Color>
    <Color x:Key="Teal300">#5EEAD4</Color>
    <Color x:Key="Teal400">#2DD4BF</Color>
    <Color x:Key="Teal500">#14B8A6</Color>
    <Color x:Key="Teal600">#0D9488</Color>
    <Color x:Key="Teal700">#0F766E</Color>

    <!-- Blue Colors (Info) -->
    <Color x:Key="Blue50">#EFF6FF</Color>
    <Color x:Key="Blue100">#DBEAFE</Color>
    <Color x:Key="Blue200">#BFDBFE</Color>
    <Color x:Key="Blue500">#3B82F6</Color>
    <Color x:Key="Blue600">#2563EB</Color>

    <!-- Red Colors (Destructive, Favorites) -->
    <Color x:Key="Red50">#FEF2F2</Color>
    <Color x:Key="Red100">#FEE2E2</Color>
    <Color x:Key="Red500">#EF4444</Color>
    <Color x:Key="Red600">#DC2626</Color>

    <!-- Purple Colors (Difficulty indicator) -->
    <Color x:Key="Purple50">#FAF5FF</Color>
    <Color x:Key="Purple100">#F3E8FF</Color>
    <Color x:Key="Purple500">#A855F7</Color>
    <Color x:Key="Purple600">#9333EA</Color>

    <!-- Pink Colors (Gradient accent) -->
    <Color x:Key="Pink50">#FDF2F8</Color>
    <Color x:Key="Pink500">#EC4899</Color>

    <!-- Basic Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Primary">{StaticResource Orange500}</Color>
    <Color x:Key="PrimaryDark">{StaticResource Orange600}</Color>
    <Color x:Key="Secondary">{StaticResource Teal500}</Color>
    <Color x:Key="Success">{StaticResource Green600}</Color>
    <Color x:Key="Warning">{StaticResource Amber500}</Color>
    <Color x:Key="Danger">{StaticResource Red500}</Color>
    <Color x:Key="Info">{StaticResource Blue500}</Color>
    <Color x:Key="Background">{StaticResource Gray50}</Color>
    <Color x:Key="Surface">{StaticResource White}</Color>
    <Color x:Key="TextPrimary">{StaticResource Gray900}</Color>
    <Color x:Key="TextSecondary">{StaticResource Gray600}</Color>
    <Color x:Key="Border">{StaticResource Gray200}</Color>

</ResourceDictionary>
